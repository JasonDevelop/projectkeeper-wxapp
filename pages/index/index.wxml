<!--pages/index/index.wxml-->
<view class='page'>
  <view class="todo-header"> 进行中 </view>
  <view class='list-view'>
    <view class='todo-item' wx:for="{{projectList}}" wx:key="{{index}}" data-index="{{index}}" bindtap='toDetailPage'>

      <view class='item-line1'>
        <text class='index-text'>{{item.val[0].pname}}</text>
        <text class='index-endtime'>{{item.val[0].pend}}</text>
      </view>
      <view class='item-line2'>
        <text>当前子任务 {{item.val[0].tname}}</text>
        <image id = "check" src="../../assets/icon/check-circle.png"></image>
      </view>
      <!--  
      <view class='item-line3'>
        <text>完成度</text>
      </view>
      -->

    </view>
  </view>
  <view bindtap="toCreatNewPrjPage" class="todo-add">+</view>

  <view class="todo-header">已完成</view>
</view>